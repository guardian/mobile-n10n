              "Fn::FindInMap": [
                "Constants",
                "App",
                "Value",
              ],
            },
          },
          {
            "Key": "Stack",
            "PropagateAtLaunch": true,
            "Value": {
              "Fn::FindInMap": [
                "Constants",
                "Stack",
                "Value",
              ],
            },
          },
          {
